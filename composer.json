  },
  "autoload": {
    "psr-4": {
      "CashMachine\\Bootstrap\\": "./bootstrap",
      "CashMachine\\": "./src"
    }
  },
  "autoload-dev": {
    "CashMachine\\Tests": "./tests"
  }
}
