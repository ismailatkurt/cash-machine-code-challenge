  "minimum-stability": "stable",
  "config": {
    "bin-dir": "bin/",
    "disable-tls": true,
    "secure-http": false
  },
  "require": {
    "php": "^7.2",
    "slim/slim": "^3.10",
    "zendframework/zend-inputfilter": "^2.8"
  },
  "require-dev": {
